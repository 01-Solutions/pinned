<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Rowdies:wght@700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js" rel="stylesheet">

    <link rel="stylesheet" href="/styles/weather.css">
    <link rel="stylesheet" href="/styles/style.css">
    <link rel="stylesheet" href="/styles/footer.css">
    <link rel="stylesheet" href="/styles/nav.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <header id="userHeader">
        <nav>
            <ul class="menuItems">
                <a id="anker" href="/">
                    <p>Pinned</p>
                </a>

                <li>
                    <a href='/' data-item='Home'>Home</a>
                </li>
                <li>
                    <a href='/about' data-item='About'>About</a>
                </li>


                <!-- <li id="mylist">
                    <a href='#' data-item='My List'>My List</a>
                </li> -->
            </ul>
            <form action="/signupdata" method="GET" id="signupdata">

                <button class="login-btn ">Login<i id="logicon" class="fas fa-sign-in-alt"></i>
                </button>

            </form>
        </nav>
    </header>

    <main>

        <div id="heroTit">
            <p id="mainTit">Get news about what <br> intrests you.</p>
            <p class="subtitle fancy"><span id="line">Get latest news, breaking science & discovery news at <span
                        id="PinnedLogoText">Pinned</span></span>.</p>
        </div>

        <!-- wether wedgit -->
        <div id="weather_wrapper">
            <div class="weatherCard">
                <div class="currentTemp">
                    <span class="temp"><%= weather.temp %>&deg;</span>
                    <span class="location"><%= weather.location%></span>
                </div>
                <div class="currentWeather">
                    <span class="conditions">&#xf00d;</span>
                    <div class="info">
                        <span class="rain">1.3 MM</span>
                        <span class="wind"><%= weather.wind_spd %> MPH</span>

                    </div>
                </div>
            </div>
        </div>

        <div class="buttons">
            <form action="">

                <div class="mainDiv fieldset">
                    <div id="interestcon" class="container">
                        <ul class="ks-cboxtags">
                            <li><input type="checkbox" id="checkboxOne" value="space"><label
                                    for="checkboxOne">space</label></li>
                            <li><input type="checkbox" id="checkboxTwo" value="cars"><label
                                    for="checkboxTwo">cars</label></li>
                            <li><input type="checkbox" id="checkboxThree" value="sport"><label
                                    for="checkboxThree">sport</label></li>
                            <li><input type="checkbox" id="checkboxFour" value="food"><label
                                    for="checkboxFour">food</label></li>
                            <li><input type="checkbox" id="checkboxFive" value="cooking"><label
                                    for="checkboxFive">cooking</label></li>
                            <li><input type="checkbox" id="checkboxSix" value="animals"><label
                                    for="checkboxSix">animals</label></li>
                            <li><input type="checkbox" id="checkboxSeven" value="ants"><label
                                    for="checkboxSeven">ants</label></li>
                            <li><input type="checkbox" id="checkboxEight" value="history"><label
                                    for="checkboxEight">history</label></li>
                            <li><input type="checkbox" id="checkboxNine" value="movies"><label
                                    for="checkboxNine">movies</label></li>
                            <li><input type="checkbox" id="checkboxTen" value="technology"><label
                                    for="checkboxTen">technology</label></li>

                        </ul>

                    </div>

                </div>
            </form>
        </div>
        <!-- for search  -->
        <div id="cover">
            <form method="POST" action="/search">
                <div class="tb">
                    <div class="td"><input class="inputTextSearch" id="idForAppend" name="search" type="text"
                            placeholder="Search" value="" required></div>
                    <div class="td" id="s-cover">
                        <button id="searchBtn" class="searchButton" type="submit">
                            <div id="s-circle"></div>
                            <span></span>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- end search  -->

        <div id="newsPar">
            <p id='bottick'></p>
            <h3> Editors' Picks</h3>
        </div>

        <div class="slidDiv">

            <div class="w3-content w3-display-container">
                <% let arr = [] %>
                <% for(let i = 0; i < allArticles.length; i++){ %>
                <%   arr.push(allArticles[i]) %>
                <%    if(arr.length == 3){ %>
                <div class="w3-display-container mySlides">

                    <div id='mainNews'>
                        <div class="cardsNews">
                            <%      arr.forEach(item =>{ %>
                            <div class="cardNews contentNews">
                                <a href="<%= item.url %>" target="_blank">
                                    <div class="cardNews-content">
                                        <div class="cardNews-img">
                                            <img src="<%= item.img %>" alt="Gamer">
                                        </div>
                                        <div class="cardNews-label">
                                            <%= item.source %>
                                        </div>
                                        <div class="cardNews-title">
                                            <%= item.title %>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <%    }) %>
                        </div>
                    </div>

                </div>
                <%    arr = []; %>
                <%    } %>
                <%  } %>


                <button class="w3-button w3-display-left w3-black" onclick="plusDivs(-1)">&#10094;</button>
                <button class="w3-button w3-display-right w3-black" onclick="plusDivs(1)">&#10095;</button>

            </div>
        </div>
    </main>

    <!-- // Footer //  -->
    <%- include ('footer.ejs')  %>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="/js/forHeader.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/userintrest.js"></script>
</body>

</html>