    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/js/all.min.js">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/styles/articles.css">

</head>

<body>
    <header>

        <nav>
            <ul class="menuItems">
                <a id="anker" href="" target="_blank">Pinned</a>

                <li>
                    <a href='#' data-item='Home'>Home</a>
                </li>
                <li>
                    <a href='#' data-item='About'>About</a>
                </li>
                <li>
                    <a href='#' data-item='Articles'>Articles</a>
                </li>
                <li>
                    <a href='#' data-item='Blog'>Blog</a>
                </li>
                <li id="mylist">
                    <a href='#' data-item='myList'>myList</a>
                </li>

                <form action="/signupdata" method="POST" id="signupdata">

                    <button class="login-btn ">Login<i id="logicon" class="fas fa-sign-in-alt"></i> 
                    </button>

                </form>

            </ul>
        </nav>
    </header>

    <!-- <a href="signin&signyp.ejs">go to signin</a> -->
    <!-- <a href="/sign/signin-sigup">signin</a> -->
    <div class="card-container">
        <% articlsKey.forEach (articl => {  %>
            <form action="" method="post">

                <div class="card card-1">

                    <div id="faved">
                        <button id="favbut"><i class="love"></i>
                        <span id="saved">Saved!</span>
                    </button>
                    </div>

                    <div class="card-img"><img id="artIMG" src="<%= articl.img %>" alt=""></div>
                    <a href="" class="card-link">
                        <div class="card-img-hovered"></div>
                    </a>
                    <div class="card-info">
                        <div class="card-about">
                            <a id="cardTag" class="card-tag tag-news">
                                <%= articl.source %>
                            </a>
                            <div id="cardTime" class="card-time">
                                <%= articl.date %>
                            </div>
                        </div>
                        <!-- this is ancour for source link of articl  -->
                        <a id="cardUrl" href="<%= articl.url %>" class="card-title">read more</a>
                        <h1 id="cardTitle" class="card-title">
                            <%= articl.title %>
                        </h1>
                        <!-- this is the description we need to style it and make the font siza smaller. -->
                        <!-- <h1 class="card-title"><%= articl.description %></h1> -->
                        <div class="card-creator">by
                            <a id="cardAuthor" href="">
                                <%= articl.author %>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
            <% }) %>
    </div>

    <!-- // Footer //  -->
    <footer class="footer-distributed">

        <div class="footer-left">

            <h3 id="pindFooter">Pinned</h3>

            <p class="footer-links">
                <a href='#' data-item='Home'>Home</a>·
                <a href="#">About</a> ·
                <a href="#">Articles</a> ·
                <a href="#">Blog</a> ·
                <a href="#">MyList</a> ·
            </p>

            <p class="footer-company-name">Pinned © 2015</p>

            <div class="footer-icons">
                <a href="#"><i class="fab fa-facebook"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
                <a href="#"><i class="fab fa-github"></i></a>

            </div>

        </div>

        <div class="footer-right">

            <p>Contact Us</p>

            <form action="#">

                <input type="text" name="email" placeholder="Email">
                <textarea name="message" placeholder="Message"></textarea>
                <button>Send</button>

            </form>

        </div>

    </footer>
    <!-- //End Footer //  -->
